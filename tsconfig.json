{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "lib": ["dom", "es2015", "esnext"], // Support for ES2015+ features and DOM
      "declaration": true,
      "declarationDir": "./dist/types",
      "outDir": "./dist",
      "jsx": "react", // Support for JSX
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src"], // Include src folder
    "exclude": ["node_modules", "dist"] // Exclude node_modules and dist folders
  }
  